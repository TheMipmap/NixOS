{
    "mainBar": {
        "layer": "top",
        "position": "top",
        "reload_style_on_change": true,
        "modules-left": ["custom/shutdown_menu", "custom/endpoint", "pulseaudio","pulseaudio#microphone","backlight","bluetooth","custom/endpoint","tray"],
        "modules-center": ["hyprland/workspaces"],
        "modules-right": ["group/expand", "custom/endpoint","battery","custom/kb_layout","clock","custom/notification"],


        "hyprland/workspaces": {
            "format": "{icon}",
            "format-icons": {
                "active": "",
                "default": "",
                "empty": ""
            },
            "persistent-workspaces": {
                "*": [ 1,2,3,4,5 ]
            }
        },
        "custom/notification": {
            "tooltip": false,
            "format": "󰂜",
            "on-click": "swaync-client -t -sw",
            "escape": true
        },
        "clock": {
            "format": "{:%a %d %b %T}",
            "interval": 1,   
            "tooltip-format": "<tt><small>{calendar}</small></tt>",
            "calendar": {
                "mode": "month",
                "mode-mon-col": 3,
                "weeks-pos": "right",
                "on-scroll": 1,
                "format": {
                    "months": "<span color='#fAfBfC'><b>{}</b></span>",
                    "days": "<span color='#fAfBfC'><b>{}</b></span>",
                    "weeks": "<span color='#fAfBfC'><b>W{:%V}</b></span>",
                    "weekdays": "<span color='#fAfBfC'><b>{}</b></span>",
                    "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
                }
            },
            "actions": {
                "on-click-right": "mode"
            }
        },
        "custom/kb_layout": {
            "format": "{}",
            "exec": "~/.config/waybar/scripts/show_kb_layout.sh",
            "return-type": "text",
            "interval": "once",
            "signal": 10,
            "on-click": ""
        },
        "bluetooth": {
            "format-on": "",
            "format-off": "󰂲",
            "format-disabled": "󰂲",
            "format-connected-battery": "󰂯 {device_battery_percentage}%",
            "format-alt": "󰂯",
            "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
            "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
            "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
            "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
            "on-click-right": "blueman-manager"
        }, 
        "battery": {
            "interval":30,
            "states": {
                "good": 70,
                "warning": 40,
                "critical": 20
            },
            "format": "{icon} {capacity}%",
            "format-charging": "󰂄 {capacity}%",
            "format-plugged": "󰂄  {capacity}%",
            "format-alt": "{icon} {time}",
            "format-icons": [
                "󰁻",
            "󰁼",
            "󰁾",
            "󰂀",
            "󰂂",
            "󰁹"
            ]
        },
        "pulseaudio": {
            "format": "{icon} {volume}%",
            "format-muted": "",
            "on-click": "wpctl set-mute @DEFAULT_SINK@ toggle",
            "on-click-right": "pavucontrol",
            "on-scroll-up": "wpctl set-volume -l 1.0 @DEFAULT_SINK@ 1%+",
            "on-scroll-down": "wpctl set-volume @DEFAULT_SINK@ 1%-",
            "scroll-step": 2.5,
            "format-icons": {
                "headphone": "󱡏",
                "hands-free": "󱡏",
                "headset": "󱡏",
                "default": ["󰕿", "󰖀", "󰕾"]
            }
        },
        "pulseaudio#microphone": {
            "format": "{format_source}",
            "format-source": "",
            "format-source-muted": "",
            "on-click": "wpctl set-mute @DEFAULT_SOURCE@ toggle",
            "on-click-right": "pavucontrol"
        },
        "custom/expand": {
            "format": "",
            "tooltip": false
        },
        "custom/endpoint":{
            "format": "|",
            "tooltip": false
        },
        "group/expand": {
            "orientation": "horizontal",
            "drawer": {
                "transition-duration": 600,
                "transition-to-left": true,
                "click-to-reveal": true
            },
            "modules": ["custom/expand", "custom/endpoint","cpu","memory","temperature"]
        },
        "cpu": {
            "format": " {usage}%",
            "tooltip": true
        },
        "memory": {
            "format": " {}%",
            "tooltip": true,
            "tooltip-format": "Memory: {used:0.1f}GiB used\nSwap: {swapUsed:0.1f}GiB used"
        },
        "temperature": {
            "critical-threshold": 80,
            "format": "{icon} {temperatureC}°C",
            "format-icons": ["", "", "", "", "", "", "", "", "", ""]
        },
        "backlight": {
            "format": "{icon}",
            "format-icons": ["󰃚", "󰃛", "󰃜", "󰃝", "󰃞", "󰃟", "󰃠"],
            "on-scroll-up": "brightnessctl s 1%+",
            "on-scroll-down": "brightnessctl s 1%-",
            "scroll-step": 2.5,
            "tooltip-format": "Brightness: {percent}%"
        },
        "custom/shutdown_menu": {
            "format": "",
            "on-click": "rofi -show power-menu -modi 'power-menu:rofi-power-menu --choices=shutdown/reboot/suspend/logout'"
        },
        "tray": {
            "icon-size": 14,
            "spacing": 10
        }
    }
} 
